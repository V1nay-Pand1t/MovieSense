{
    "name": "MovieSense frontend",
    "dockerFile": "Dockerfile",
    "context": "..",
    "forwardPorts": [
        5173
    ],
    "mounts": [
        "source=${localWorkspaceFolder}/frontend-movie-recommender/movie_frontend,target=/workspace,type=bind"
    ],
    "containerEnv": {
        "CHOKIDAR_USEPOLLING": "true"
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "dbaeumer.vscode-eslint",
                "esbenp.prettier-vscode"
            ]
        }
    },
    "postCreateCommand": "npm install"
}
